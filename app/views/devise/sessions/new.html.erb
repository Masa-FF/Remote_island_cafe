<article class="menu-base">
  <div class="base-title">
    <h2>INTEARACT</h2>
    <p>ログインして、島の魅力をシェアしてみましよう！</p>
  </div>
</article>

<div class="back_image">
  <div class="container">
    <div class="login_tile">
      <h2>Log in</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field_box">
          <br>
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :size => "44*30" %>
        </div>
        <br>
        <div class="field_box">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password", :size => "44*30" %>
        </div>
        <br>
        <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :入力情報を記憶 %>
        </div>
      <% end %> 
      <div class="actions">
        <%= f.submit "ログイン", :class => 'submit_button' %>
      </div>
      <% end %>
      <div class="links">
        <%= render "devise/shared/links" %>
      </div>
    </div>   
  </div>
</div>

