<h1>新規投稿</h1>

<% if @photo.errors.any? %>
  <div>
    <ul style="color: red">
      <% @photo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model:@photo, local:true do |f| %>
<%= f.attachment_field :image %>
<br>
<%= f.label :タイトル %> 
<%= f.text_field :title, size: "25x1" %>
<br>
<%= f.label :コメント %> 
<%= f.text_area :body, size: "25x3", placeholder:"コメントを記入" %>
<br>
<%= f.submit '投稿' %>
<% end %>