<article class="menu-base">
  <div class="base-title">
    <h2>POST PHOTO</h2>
    <p>島の写真を投稿してみましょう！</p>
  </div>
</article>

<% if @photo.errors.any? %>
  <div>
    <ul style="color: red">
      <% @photo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="section">
  <div class="photo_form">
    <%= form_with model:@photo, local:true do |f| %>
    <%= f.attachment_field :image %>
    <br>
    <%= f.label :タイトル %> 
    <%= f.text_field :title, size: "25x1" %>
    <br>
    <%= f.label :コメント %> 
    <%= f.text_area :body, size: "25x10", placeholder:"コメントを記入" %>
    <br>
    <%= f.submit '投稿' %>
    <% end %>  
  </div>
</div>
