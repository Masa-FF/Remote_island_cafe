<h1>新規投稿</h1>

<% if @photo.errors.any? %>
  <div>
    <ul style="color: red">
      <% @photo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model:@photo, local:true do |f| %>
<%= f.attachment_field :image %>
<h4>タイトル</h4>
<%= f.text_field :title %>
<h4>本文</h4>
<%= f.text_area :body, placeholder:"コメントを記入" %>
<%= f.submit '投稿' %>
<% end %>