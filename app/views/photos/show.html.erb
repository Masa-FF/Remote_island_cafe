<h1>Photos#show</h1>
<p>Find me in app/views/photos/show.html.erb</p>

<%= attachment_image_tag @photo, :image, size: "500x500", format: 'jpeg' %>
<br>
<%= @photo.title %>
<br>
<%= @photo.body %>
<br>
<%= @photo.created_at.to_s(:datetime_jp) %>


<li>
  <%= link_to "一覧へ戻る", photos_path, class:"d-underline" %>
</li>

<li>
  <% if @photo.user == current_user %>
  <%= link_to "削除", photo_path(@photo), method: :delete, data: {confirm: "削除しますか？"}, class:"d-underline" %>
  <% end %>
</li>

<% if @photo.favorited_by?(current_user) %>
<li>
  <%= link_to photo_favorites_path(@photo), method: :delete do %>
    <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= @photo.favorites.count %> 
  <% end %>
</li>
<% else %>
<li>
  <%= link_to photo_favorites_path(@photo), method: :post do %>
    <i class="fa fa-heart-o" aria-hidden="true"></i>
    <%= @photo.favorites.count %> 
  <% end %>
</li>
<% end %>
