<article class="menu-base">
  <div class="base-title">
    <h2>SHARE</h2>
    <p>島を愛するみんなに写真をシェアしてみましょう</p>
  </div>
</article>

<% if flash[:notice] %>
  <div class="notion_message">
    <p><%= flash[:notice] %></p>
  </div>
<% end %>

<br>
<%= form_tag(photos_path, :method => 'get') do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag '投稿を検索', :title => nil %>
<% end %>

<div class="plus_button">
  <%= link_to image_tag("icon_001523_128.png"), new_photo_path %>
</div>

<div class="section">
  <div class="flexbox">
    <% @photos.each do |photo| %>
    <ul>
        <li>
          <div class="photo_tile">
            <%= link_to photo_path(photo.id) do %>
            <%= attachment_image_tag photo, :image, size: "250x250", format: 'jpeg' %>
            <div class="mask">
              <div class="caption">
                <%= photo.title %>
                <br>
                <br>
                <i class="fa fa-commenting-o"></i> 
                <%= photo.comments.count %>
                <i class="fa fa-heart-o" aria-hidden="true"></i>
                <%= photo.favorites.count %>                 
              </div>
            </div>
            <% end %>
          </div>  
        </li>
    </ul>
    <% end %> 
    
  </div>
</div>
